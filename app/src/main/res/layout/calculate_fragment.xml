<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/firstTableRow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/titleOfTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="32dp"
                    android:text="Stock Comparisons"/>

            </TableRow>

            <TableRow
                android:id="@+id/secondTableRow"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/firstStock"
                    android:text="LINKEDSTOCKONE"
                    android:textStyle="bold"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/secondStock"
                    android:text="LINKEDSTOCKTWO"
                    android:textStyle="bold"
                    android:typeface="serif"/>

                <TextView
                    android:id="@+id/thirdStock"
                    android:text="ATRACTIVENESS"
                    android:textStyle="bold"
                    android:typeface="serif"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>