<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DAD8E8"
    xmlns:tools="http://schemas.android.com/tools">
    <!--Hold the title of the chosen fund-->

    <TextView
        android:id="@+id/list_item_fund"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        style="@android:style/Widget.Button"
        android:textSize="30dp"
        android:background="#DAD8E8"
        android:shadowColor="#adff2f"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:padding="5dp"/>
    <!--This is only for testing-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_stock_price"
        android:gravity="right"
        android:textSize="25dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/list_item_fund"
        android:layout_toRightOf="@id/list_item_fund"
        android:background="@android:drawable/btn_dropdown"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        android:gravity="center"
        android:entries="@array/array_name"/>

</RelativeLayout>