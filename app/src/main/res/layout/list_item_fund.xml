<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list_item_fund"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_ticker_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/list_item_weight_spinner"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/list_item_weight_spinner"
            android:spinnerMode="dropdown">
        </Spinner>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="bottom"
        />

    <LinearLayout
        android:id="@+id/undo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDeleteBackround"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/undo_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|start"
            android:text="Undo"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/undo_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="UNDO"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="DELETE"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>